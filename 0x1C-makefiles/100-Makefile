# -*- MakeFile -*-

#target: dependencies
#	action

# Usage:
# make -f all 100-Makefile        # compile all *.o files using *.c files created

CC = gcc
SRC = main.c school.c
OBJ = ${SRC:%.c=%.o}
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic 

.PHONY: all clean oclean fclean re

all: ${OBJ} m.h
	${CC} ${OBJ} -o ${NAME}

clean:
	${RM} *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: oclean all
